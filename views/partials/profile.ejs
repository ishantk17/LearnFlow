<div
  data-toggle="sticky"
  data-sticky-offset="30"
  data-negative-margin=".card-profile-cover"
  style="transition: all 0.5s ease-in-out"
>
  <div
    class="card card-profile"
    style="border: 5px solid black; border-radius: 10px"
  >
    <div class="card-profile-cover">
      <img
        alt="Image placeholder"
        src="https://www.findelahistoria.com/web/wp-content/uploads/2013/04/Iron-Man-3-banner.jpg"
        class="card-img-top"
      />
    </div>
    <a href="/profile/settings" class="mx-auto">
      <img
        alt="Image placeholder"
        src="https://i.pinimg.com/originals/11/bb/0a/11bb0a8d4debad82bf7fee22f76636f0.jpg"
        class="card-profile-image avatar rounded-circle shadow hover-shadow-lg"
      />
    </a>
    <div class="card-body p-3 pt-0 text-center">
      <h5 class="mb-0"><%= user.displayName %></h5>
      <% if(user.role===0){ %>
          Creator
    <%  } else { %>
   Student
  <%  } %>

      <div class="avatar-group hover-avatar-ungroup mb-3"></div>
      <div class="actions mt-3 pt-3 px-5 delimiter-top">
        <p><%= user.about %></p>
      </div>
    </div>
  </div>
</div>

